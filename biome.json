{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "files": {
    "includes": ["src", "*.{js,jsx,ts,tsx,mjs,cjs}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "style": {
        "useConst": "error",
        "noNegationElse": "error"
      },
      "suspicious": {
        "noDoubleEquals": "error"
      }
    }
  }
}
